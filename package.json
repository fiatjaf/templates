{
  "name": "templates",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@cycle/core": "6.0.0",
    "marked": "^0.3.5",
    "nunjucks": "^2.4.1",
    "rx": "4.0.7",
    "xtend": "^4.0.1",
    "yaml": "^0.3.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "stylus": "^0.53.0",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "11.0.1",
    "browserify-incremental": "^3.0.1",
    "instant-server": "^2.0.0",
    "mkdirp": "0.5.x"
  },
  "scripts": {
    "style": "stylus style.styl -o dist/style.css",
    "browserify": "mkdirp dist && browserify main.js -t babelify --outfile dist/main.js",
    "live": "ls | grep -v 'swp' | entr fish -c 'browserifyinc main.js -t babelify --outfile dist/main.js; and cp index.html dist/; and echo \"done!\"'",
    "server": "instant -p 5000 --delay 1000",
    "build": "npm run browserify && npm run style && cp index.html dist/",
    "deploy": "npm run build && surge -p ./dist -d templates.alhur.es"
  }
}
